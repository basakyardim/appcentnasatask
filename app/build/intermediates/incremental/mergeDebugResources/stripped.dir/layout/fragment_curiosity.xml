<?xml version="1.0" encoding="utf-8"?>

                                                  
                                                        
<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.CuriosityFragment" android:tag="layout/fragment_curiosity_0" xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools" xmlns:app="http://schemas.android.com/apk/res-auto">

  <Spinner
      android:id="@+id/spinnerCuriosity"
      android:layout_width="150dp"
      android:layout_height="60dp"
      android:foreground="@drawable/border_spinner"
      android:spinnerMode="dropdown"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintTop_toTopOf="parent" />

  <androidx.recyclerview.widget.RecyclerView
      android:id="@+id/curiosityList"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:layout_marginTop="60dp"
      app:layout_constraintTop_toBottomOf="@+id/spinnerCuriosity"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintEnd_toEndOf="parent"/>

